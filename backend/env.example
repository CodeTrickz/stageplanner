DATABASE_URL=file:./dev.db
JWT_SECRET=change-me-super-secret
PORT=3001
CORS_ORIGIN=http://localhost:5173

# SMTP (optional) - enable real email sending
SMTP_HOST=mail.example.nl
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=mailer@example.nl
SMTP_PASS=change-me
# From address used in outgoing emails (defaults to SMTP_USER if omitted)
MAIL_FROM=Stage Planner <mailer@example.nl>

# Optional:
# How long refresh tokens are valid (default: 30). Access tokens use JWT_EXPIRES_IN (default: 8h).
REFRESH_EXPIRES_DAYS=30
# Cache TTL in seconds (default: 30)
CACHE_TTL_SECONDS=30
# Notifications: days before deadline to notify (0 disables "soon")
NOTIFICATIONS_SOON_DAYS=1
# Notifications job interval in ms (0 disables job)
NOTIFICATIONS_JOB_INTERVAL_MS=3600000
# If behind a reverse proxy (nginx), set to 1 (or a number of hops) so req.ip is correct for rate limiting.
TRUST_PROXY=1

# Prometheus metrics (internal)
# If set, /metrics requires Authorization: Bearer <token>
METRICS_TOKEN=change-me

# Tracing (OpenTelemetry -> Jaeger)
# Enable/disable tracing
OTEL_ENABLED=true
# Optional: enable verbose OpenTelemetry debug logs
OTEL_DEBUG=false
# Service name shown in Jaeger UI
OTEL_SERVICE_NAME=stageplanner-backend
# Jaeger exporter (HTTP collector). Example for docker compose Jaeger:
# OTEL_EXPORTER_JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTEL_EXPORTER_JAEGER_ENDPOINT=http://jaeger:14268/api/traces
# Optional: if you prefer UDP agent instead of collector:
# JAEGER_AGENT_HOST=jaeger
# JAEGER_AGENT_PORT=6831

# Admin user seeding (only in development, or set SEED_ADMIN=true for production)
# Default admin credentials (change in production!)
SEED_ADMIN=true
ADMIN_EMAIL=admin@app.be
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin













